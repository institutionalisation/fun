struct ostream: public fstream {
	using f= fstream;
	using f::fstream;
	u t= 0;
	void flush() {
		u written = (u)write(f::fd,f::buf.x,t);
		if(written != t)
			exit(77);
		t= 0;
	}
	void put(const Char a) {
		f::buf.x[t++] = a;
		if(t==f::buf.size) flush();
	}
	tm<tn ...T>
	void operator()(T... a) {
		(s[]){ (wrap(a).write(this),0)... };
	}
};